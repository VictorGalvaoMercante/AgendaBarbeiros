@model IEnumerable<AgendaBarbeiros.Models.Cliente>
@{
    ViewData["Title"] = "Clientes do Dia";
    var dataDoDia = ViewBag.DataAtendimento as DateTime?;
    int? diaId = ViewBag.DiaId as int?;
}

<style>
    body {
        background-color: #121212;
        color: #e0e0e0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .container {
        max-width: 960px;
        margin: 30px auto;
        padding: 20px;
    }

    h2 {
        color: #1db954;
        font-weight: 700;
        margin-bottom: 1rem;
    }

    .btn {
        background-color: #1db954;
        border: none;
        padding: 10px 18px;
        font-weight: 600;
        border-radius: 6px;
        text-decoration: none;
        color: white;
        margin-bottom: 20px;
        display: inline-block;
        transition: 0.3s;
    }

        .btn:hover {
            background-color: #17a74a;
            box-shadow: 0 0 8px #1db954;
        }

    table {
        width: 100%;
        background-color: #1e1e1e;
        border-collapse: collapse;
        border-radius: 8px;
        overflow: hidden;
    }

    th, td {
        padding: 12px 15px;
        text-align: left;
        color: #ddd;
    }

    th {
        background-color: #222;
        color: #ccc;
        font-weight: 600;
    }

    tr:hover {
        background-color: #2a2a2a;
    }
</style>

<div class="container">
    <h2>Clientes do dia: @dataDoDia?.ToString("dd/MM/yyyy")</h2>

    <a class="btn" href="/Cliente/Create?diaId=@diaId">Adicionar Cliente</a>

    @if (!Model.Any())
    {
        <p>Nenhum cliente agendado para este dia.</p>
    }
    else
    {
        <table>
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Telefone</th>
                    <th>Categoria</th>
                    <th>Horário</th>
                    <th>Preço</th>
                    <th>Observação</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cliente in Model)
                {
                    <tr>
                        <td>@cliente.Nome</td>
                        <td>@cliente.Telefone</td>
                        <td>@cliente.Categoria</td>
                        <td>@cliente.Horario.ToString("HH:mm")</td>
                        <td>R$ @cliente.Preco.ToString("F2")</td>
                        <td>@cliente.Observacao</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
