@{
    ViewData["Title"] = "Login";
}

<div class="container-login">
    <div class="login-card">
        <div class="login-image">
            <img src="~/img/barbearia.webp" alt="Barbeiro Cortando Cabelo" />
        </div>

        <div class="login-form">
            <h2>Login</h2>
            <p class="subtitle">Faça login para acessar sua agenda</p>
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert-error">
                    @foreach (var erro in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <p>@erro.ErrorMessage</p>
                    }
                </div>
            }



            <form method="post" asp-action="Login" asp-controller="Usuario">

                <label for="email">Email</label>
                <input id="email" name="email" type="email" placeholder="Digite seu email" required />

                <label for="senha">Senha</label>
                <input id="senha" name="senha" type="password" placeholder="Digite sua senha" required />

                <div class="btn-group">
                    <button type="submit" class="btn-primary">Entrar</button>
                    <a asp-action="Register" asp-controller="Usuario" class="btn-secondary">Cadastre-se</a>
                </div>
            </form>
           

        </div>
    </div>
</div>

<style>
    @@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;600&display=swap');

    body, html {
        margin: 0;
        padding: 0;
        height: 100%;
        font-family: 'Poppins', sans-serif;
        background-color: #121212;
        color: #e0e0e0;
    }

    .container-login {
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 1rem;
    }

    .login-card {
        display: flex;
        background: #1e1e1e;
        border-radius: 16px;
        box-shadow: 0 12px 40px rgba(0,0,0,0.6);
        max-width: 900px;
        width: 100%;
        overflow: hidden;
    }

    .login-image {
        flex: 1;
        background: #000;
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .alert-error {
        background-color: #ffdddd;
        color: #b00020;
        padding: 1rem;
        border-radius: 8px;
        margin-bottom: 1.5rem;
        font-weight: bold;
    }


        .login-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            filter: brightness(0.7);
            transition: transform 0.5s ease;
        }

            .login-image img:hover {
                transform: scale(1.05);
            }

    .login-form {
        flex: 1;
        padding: 3rem 2.5rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

        .login-form h2 {
            color: #1db954;
            font-weight: 700;
            margin-bottom: 0.5rem;
            font-size: 2.5rem;
        }

    .subtitle {
        color: #88c78a;
        font-weight: 400;
        margin-bottom: 2rem;
        font-size: 1.1rem;
    }

    label {
        font-weight: 600;
        color: #aaa;
        margin-bottom: 0.3rem;
        display: block;
        font-size: 0.9rem;
    }

    input[type="email"],
    input[type="password"] {
        background-color: #2a2a2a;
        border: none;
        border-radius: 8px;
        color: #eee;
        padding: 0.75rem 1rem;
        margin-bottom: 1.5rem;
        font-size: 1rem;
        transition: box-shadow 0.3s ease, background-color 0.3s ease;
        width: 100%;
    }

        input[type="email"]:focus,
        input[type="password"]:focus {
            outline: none;
            background-color: #383838;
            box-shadow: 0 0 8px #1db954;
            color: #fff;
        }

    .btn-group {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .btn-primary {
        background-color: #1db954;
        border: none;
        color: #121212;
        font-weight: 700;
        font-size: 1.1rem;
        padding: 0.85rem 0;
        border-radius: 8px;
        cursor: pointer;
        transition: background-color 0.3s ease, box-shadow 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #17a74a;
            box-shadow: 0 0 12px #1db954;
        }

    .btn-secondary {
        text-align: center;
        color: #1db954;
        font-weight: 600;
        text-decoration: none;
        padding: 0.75rem 0;
        border: 2px solid #1db954;
        border-radius: 8px;
        transition: background-color 0.3s ease, color 0.3s ease;
    }

        .btn-secondary:hover {
            background-color: #1db954;
            color: #121212;
            box-shadow: 0 0 10px #1db954;
            text-decoration: none;
        }

    /* Responsivo */
    @@media (max-width: 768px) {
        .login-card {
            flex-direction: column;
            max-width: 400px;
        }

        .login-image {
            height: 200px;
        }
    }
</style>
