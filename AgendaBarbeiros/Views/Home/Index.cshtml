            }

        .table {
            background-color: #1e1e1e;
            border-radius: 8px;
            overflow: hidden;
        }

            .table thead th {
                border-bottom: 2px solid #333;
                color: #ccc;
                font-weight: 600;
            }

            .table tbody tr:hover {
                background-color: #2a2a2a;
                cursor: pointer;
            }

            .table tbody td, .table tbody th {
                border-top: none;
                color: #ddd;
            }

        a.btn {
            margin-right: 0.3rem;
        }

        .btn-group {
