@model IEnumerable<AgendaBarbeiros.Models.Cliente>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Agenda </h1>
    <p>Registre seus clientes abaixo</p>
    <div class="btn-group">
        <a class="btn btn-primary active" aria-current="page" asp-controller="Clientes" asp-action="Create">Registrar cliente</a>
        <a class="btn btn-primary active" aria-current="page" asp-controller="Clientes" asp-action="Index">Visualizar agenda</a>

    </div>
   
    
    <style>
        body {
            background-color: #121212; 
            color: #e0e0e0; 
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .text-center h1.display-4 {
            color: #1db954; 
            font-weight: 700;
            margin-bottom: 0.5rem;
        }

        .text-center p {
            color: #b0b0b0;
            font-size: 1.2rem;
        }

        .btn-primary {
            background-color: #1db954;
            border: none;
            transition: background-color 0.3s ease;
        }

            .btn-primary:hover, .btn-primary:focus {
                background-color: #17a74a;
                box-shadow: 0 0 8px #1db954;
                outline: none;
            }

        .table {
            background-color: #1e1e1e;
            border-radius: 8px;
            overflow: hidden;
        }

            .table thead th {
                border-bottom: 2px solid #333;
                color: #ccc;
                font-weight: 600;
            }

            .table tbody tr:hover {
                background-color: #2a2a2a;
                cursor: pointer;
            }

            .table tbody td, .table tbody th {
                border-top: none;
                color: #ddd;
            }

        a.btn {
            margin-right: 0.3rem;
        }

        .btn-group {
            margin-bottom: 1.5rem;
        }

    </style>
</div>
