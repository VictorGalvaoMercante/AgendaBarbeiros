@model AgendaBarbeiros.Models.Usuario  
@{  
    ViewData["Title"] = "Cadastre-se";  
}  

<div class="container-login">  
    <div class="login-card">  
        <div class="login-image">  
            <img src="~/img/barbearia.webp" alt="Barbeiro Cortando Cabelo" />  
        </div>  

        <div class="login-form">  
            <h2>Agenda Barbeiros</h2>  
            <p class="subtitle">Casdastre-se para acessar sua agenda</p>  

            <form asp-controller="Usuario" asp-action="Register" method="post">  
                <label asp-for="Nome"></label>  
                <input asp-for="Nome" class="form-control" placeholder="Digite seu nome" required />  

                <label asp-for="Email"></label>  
                <input asp-for="Email" type="email" class="form-control" placeholder="Digite seu email" required />  

                <label asp-for="Senha"></label>  
                <input asp-for="Senha" type="password" class="form-control" placeholder="Digite sua senha" required />  

                <label asp-for="ConfirmacaoSenha"></label>  
                <input asp-for="ConfirmacaoSenha" type="password" class="form-control" placeholder="Confirme sua senha" required />  

                <div asp-validation-summary="All" class="text-danger"></div>  

                <div class="btn-group">  
                    <button type="submit" class="btn btn-primary">Cadastrar</button>  
                </div>  
            </form>  

            <partial name="_ValidationScriptsPartial" />  
        </div>  
    </div>  
</div>  

<style>  
    @@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;600&display=swap');  

    body, html {  
        margin: 0;  
        padding: 0;  
        height: 100%;  
        font-family: 'Poppins', sans-serif;  
        background-color: #121212;  
        color: #e0e0e0;  
    }  

    .container-login {  
        height: 100vh;  
        display: flex;  
        justify-content: center;  
        align-items: center;  
        padding: 1rem;  
    }  

    .login-card {  
        display: flex;  
        background: #1e1e1e;  
        border-radius: 16px;  
        box-shadow: 0 12px 40px rgba(0,0,0,0.6);  
        max-width: 900px;  
        width: 100%;  
        overflow: hidden;  
    }  

    .login-image {  
        flex: 1;  
        background: #000;  
        overflow: hidden;  
        display: flex;  
        align-items: center;  
        justify-content: center;  
    }  

        .login-image img {  
            width: 100%;  
            height: 100%;  
            object-fit: cover;  
            filter: brightness(0.7);  
            transition: transform 0.5s ease;  
        }  

            .login-image img:hover {  
                transform: scale(1.05);  
            }  

    .login-form {  
        flex: 1;  
        padding: 3rem 2.5rem;  
        display: flex;  
        flex-direction: column;  
        justify-content: center;  
    }  

        .login-form h2 {  
            color: #1db954;  
            font-weight: 700;  
            margin-bottom: 0.5rem;  
            font-size: 2.5rem;  
        }  

    .subtitle {  
        color: #88c78a;  
        font-weight: 400;  
        margin-bottom: 2rem;  
        font-size: 1.1rem;  
    }  

    label {  
        font-weight: 600;  
        color: #aaa;  
        margin-bottom: 0.3rem;  
        display: block;  
        font-size: 0.9rem;  
    }  

    input[type="email"],  
    input[type="password"],  
    input[type="nome"] {  
        background-color: #2a2a2a;  
        border: none;  
        border-radius: 8px;  
        color: #eee;  
        padding: 0.75rem 1rem;  
        margin-bottom: 1.5rem;  
        font-size: 1rem;  
        transition: box-shadow 0.3s ease, background-color 0.3s ease;  
        width: 100%;  
    }  

        input[type="email"]:focus,  
        input[type="password"]:focus,  
        input[type="nome"]:focus{  
            outline: none;  
            background-color: #383838;  
            box-shadow: 0 0 8px #1db954;  
            color: #fff;  
        }  

    .btn-group {  
        display: flex;  
        flex-direction: column;  
        gap: 1rem;  
    }  

    .btn-primary {  
        background-color: #1db954;  
        border: none;  
        color: #121212;  
        font-weight: 700;  
        font-size: 1.1rem;  
        padding: 0.85rem 0;  
        border-radius: 8px;  
        cursor: pointer;  
        transition: background-color 0.3s ease, box-shadow 0.3s ease;  
    }  

        .btn-primary:hover {  
            background-color: #17a74a;  
            box-shadow: 0 0 12px #1db954;  
        }  

    .btn-secondary {  
        text-align: center;  
        color: #1db954;  
        font-weight: 600;  
        text-decoration: none;  
        padding: 0.75rem 0;  
        border: 2px solid #1db954;  
        border-radius: 8px;  
        transition: background-color 0.3s ease, color 0.3s ease;  
    }  

        .btn-secondary:hover {  
            background-color: #1db954;  
            color: #121212;  
            box-shadow: 0 0 10px #1db954;  
            text-decoration: none;  
        }  

    /* Responsivo */  
    @@media (max-width: 768px) {  
        .login-card {  
            flex-direction: column;  
            max-width: 400px;  
        }  

        .login-image {  
            height: 200px;  
        }  
    }  
</style>
