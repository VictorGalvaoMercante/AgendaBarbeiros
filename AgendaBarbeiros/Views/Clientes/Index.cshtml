@model IEnumerable<AgendaBarbeiros.Models.Cliente>

@{
    ViewData["Title"] = "Agenda";
}
@if (Context.Session.GetString("UsuarioNome") != null)
{
    <p>Bem-vindo, @Context.Session.GetString("UsuarioNome")</p>
    <a asp-controller="Usuario" asp-action="Logout">Sair</a>
}


<h1>Agenda</h1>

<p>
    <a asp-action="Create">Agendar novo cliente</a>
</p>
<div class="table-responsive">

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Horario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Preco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Observacao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Categoria)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Horario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Preco)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Observacao)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ClienteId" class="btnAction">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ClienteId" class="btnAction">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ClienteId" class="btnAction">Delete</a>
                </td>
            </tr>

        }

        <style>
            body {
                background-color: #121212;
                margin: 0;
                font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            }

            h1 {
                font-weight: 700;
                color: #1db954;
                text-align: center;
                margin-bottom: 25px;
            }

            p > a {
                color: #1db954;
                text-decoration: none;
                font-weight: 600;
                padding: 8px 18px;
                border: 2px solid #1db954;
                border-radius: 6px;
                transition: background-color 0.3s ease, color 0.3s ease;
                display: inline-block;
                margin-bottom: 20px;
            }

                p > a:hover,
                p > a:focus {
                    background-color: #1db954;
                    color: #121212;
                    outline: none;
                }

            /* Container responsivo para a tabela permitir scroll horizontal */
            .table-responsive {
                width: 100%;
                overflow-x: auto;
                -webkit-overflow-scrolling: touch; /* para smooth scroll em iOS */
                margin-bottom: 20px;
            }

            .table {
                width: 100%;
                border-collapse: collapse;
                background-color: #1e1e1e;
                border-radius: 10px;
                overflow: hidden;
                box-shadow: 0 4px 10px rgba(0,0,0,0.6);
                min-width: 600px; /* para garantir que a tabela tenha tamanho mínimo e precise scroll */
            }

                .table thead th {
                    padding: 12px 15px;
                    text-align: left;
                    color: #ccc;
                    font-weight: 600;
                    border-bottom: 2px solid #333;
                    white-space: nowrap;
                }

                .table tbody tr {
                    border-bottom: 1px solid #2a2a2a;
                    transition: background-color 0.3s ease;
                }

                    .table tbody tr:hover {
                        background-color: #2a2a2a;
                        cursor: pointer;
                    }

                .table tbody td {
                    padding: 12px 15px;
                    color: #ddd;
                    vertical-align: middle;
                    white-space: nowrap;
                }

            .btnAction {
                background-color: #1db954;
                border: none;
                font-weight: 600;
                font-size: 15px;
                border-radius: 6px;
                transition: background-color 0.3s ease, box-shadow 0.3s ease;
                color: #121212;
                text-decoration: none;
                padding: 6px 12px;
                margin-right: 6px;
                display: inline-block;
                user-select: none;
                cursor: pointer;
            }

                .btnAction:last-child {
                    margin-right: 0;
                }

                .btnAction:hover,
                .btnAction:focus {
                    background-color: #17a74a;
                    box-shadow: 0 0 8px #1db954;
                    outline: none;
                    color: #121212;
                    text-decoration: none;
                }

            /* RESPONSIVIDADE */
            @@media (max-width: 768px) {
                h1

            {
                font-size: 1.8rem;
            }

            p > a {
                padding: 6px 14px;
                font-size: 0.9rem;
            }

            .btnAction {
                font-size: 13px;
                padding: 5px 10px;
            }

            }

            @@media (max-width: 576px) {
                /* Envolva a tabela para scroll horizontal */
                .table-responsive

            {
                margin-bottom: 15px;
            }

            .table thead th,
            .table tbody td {
                padding: 8px 10px;
                font-size: 0.85rem;
            }

            .btnAction {
                padding: 4px 8px;
                font-size: 12px;
                margin-right: 4px;
            }

            }
        </style>

        <div class="table-responsive">
            <table class="table">
                <!-- O resto da tabela -->
            </table>
        </div>

           


    </tbody>
</table>
</div>
